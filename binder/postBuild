# ngl install 
jupyter labextension install @jupyter-widgets/jupyterlab-manager@0.36.0 --no-build
git clone --single-branch -b jupyterlab https://github.com/jan-janssen/nglview.git ~/nglview
jupyter labextension install ~/nglview/js --no-build
jupyter lab build
rm -rf ~/nglview

# pyiron setup
echo -e "[DEFAULT]\nTOP_LEVEL_DIRS = ${HOME}\nRESOURCE_PATHS = ${HOME}/resources" > ~/.pyiron
git clone git@github.com:pyiron/pyiron-resources.git resources

# clean up
mv notebooks/* .
rm -r ~/binder ~/.ci_support ~/conda ~/docs ~/pyiron ~/tests ~/notebooks
rm .travis.yml appveyor.yml LICENSE MANIFEST.in README.md setup.cfg setup.py versioneer.py
